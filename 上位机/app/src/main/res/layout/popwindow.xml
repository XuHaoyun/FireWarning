<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_marginTop="20dp"
    android:layout_height="550dp">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="480dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    style="@style/edit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        style="@style/edit"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/edit_pic"
                            android:scaleType="fitCenter"
                            android:src="@drawable/temp1"></ImageView>

                        <LinearLayout
                            style="@style/edit_pic_left_1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="温度上限"></TextView>

                                <EditText
                                    android:id="@+id/edit1_input_up"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/baseline_arrow_circle_up_24"
                                    android:gravity="center"
                                    android:text="20"></EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="温度下限"></TextView>

                                <EditText
                                    android:id="@+id/edit1_input_down"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/down"
                                    android:gravity="center"
                                    android:text="5"></EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="87dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/edit1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="设置"
                                android:textSize="18sp"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/edit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        style="@style/edit"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/edit_pic"
                            android:scaleType="centerCrop"
                            android:src="@drawable/solictemp"></ImageView>

                        <LinearLayout
                            style="@style/edit_pic_left_1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="湿度上限"></TextView>

                                <EditText
                                    android:id="@+id/edit2_input_up"
                                    android:layout_width="100dp"
                                    android:layout_height="55dp"
                                    android:drawableLeft="@drawable/baseline_arrow_circle_up_24"
                                    android:gravity="center"
                                    android:text="20"></EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="湿度下限"></TextView>

                                <EditText
                                    android:id="@+id/edit2_input_down"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/down"
                                    android:gravity="center"
                                    android:text="05"></EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="87dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/edit2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="设置"
                                android:textSize="18sp"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/edit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        style="@style/edit"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/edit_pic"
                            android:scaleType="centerCrop"
                            android:src="@drawable/led"></ImageView>

                        <LinearLayout
                            style="@style/edit_pic_left_1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="光照上限"></TextView>

                                <EditText
                                    android:id="@+id/edit3_input_up"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/baseline_arrow_circle_up_24"
                                    android:gravity="center"
                                    android:text="80"></EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="光照下限"></TextView>

                                <EditText
                                    android:id="@+id/edit3_input_down"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/down"
                                    android:gravity="center"
                                    android:text="0"></EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="87dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/edit3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="设置"
                                android:textSize="18sp"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/edit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        style="@style/edit"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/edit_pic"
                            android:src="@drawable/mist"></ImageView>

                        <LinearLayout
                            style="@style/edit_pic_left_1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="烟雾上限"></TextView>

                                <EditText
                                    android:id="@+id/edit4_input_up"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:drawableLeft="@drawable/baseline_arrow_circle_up_24"
                                    android:gravity="center"
                                    android:text="80"></EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    style="@style/edit_pic_left_text"
                                    android:text="烟雾下限"></TextView>

                                <EditText
                                    android:id="@+id/edit4_input_down"
                                    android:layout_width="100dp"
                                    android:layout_height="50sp"
                                    android:drawableLeft="@drawable/down"
                                    android:gravity="center"
                                    android:text="50"></EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="87dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/edit4"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="设置"
                                android:textSize="18sp"></Button>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/edit_query1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="确认"
                        android:textSize="22sp"></Button>

                    <Button
                        android:id="@+id/edit_cancel"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="100dp"
                        android:text="取消"
                        android:textSize="22sp"></Button>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>